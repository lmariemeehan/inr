<!DOCTYPE html>
<html>
  <head>
    <%- include('../static/partials/head.ejs') %>
  </head>
  <body>

    <%- include('../static/partials/navbar.ejs') %>

    <main class="container">
      <h1 class="my-4"><span><img src="https://res.cloudinary.com/laurameehan/image/upload/v1582092289/Drug_kytmxk.svg" width="40" height="40" class="mr-2" /></span>Edit Medication Entry</h1>

      <div class="card">
        <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
              <a class="nav-link active" href="/medications/:id/edit">Edit Entry</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/medications">Show History</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Feature to come!</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <form action="/medications/<%= medication.id %>/update" method="post">
            <div class="form-group">
              <label for="date">Date:</label>
              <input type="date" name="date" value="<%= medication.date %>">
            </div>
            <div class="form-group">
              <label for="drug">Medication:</label>
              <input type="text" class="form-control" name="drug" aria-describedby="drugNameHelp" value="<%= medication.drug %>">
            </div>
            <div class="form-group">
              <label for="dose">Dose:</label>
              <input type="number" step="0.1" min=0 class="form-control" name="dose" aria-describedby="doseHelp" value="<%= medication.dose %>">
            </div>
            <div class="form-group">
              <label for="ingredients">Ingredients:</label>
              <textarea name="ingredients" rows="4" class="form-control"><%= medication.ingredients %></textarea>
              <button type="submit" class="btn btn-primary mt-2">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <%- include('../static/partials/baseScripts.ejs') %>

  </body>
</html>
