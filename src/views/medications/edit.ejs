<!DOCTYPE html>
<html>
  <head>
    <%- include('/Users/laurameehan/Web_Projects/inr/src/views/static/partials/head.ejs') %>
  </head>
  <body>
    <%- include('/Users/laurameehan/Web_Projects/inr/src/views/static/partials/navbar.ejs') %>

    <main class="container">
      <h1 class="my-4">Edit Medication Entry</h1>

      <form action="/medications/<%= medication.id %>/update" method="post">
        <div class="form-group">
          <label for="date">Date:</label>
          <input type="date" name="date">
        </div>
        <div class="form-group">
          <label for="drug">Medication:</label>
          <input type="text" class="form-control" name="drug" aria-describedby="drugNameHelp" placeholder="Enter name of medication">
        </div>
        <div class="form-group">
          <label for="dose">Dose:</label>
          <input type="number" step="0.1" min=0 class="form-control" name="dose" aria-describedby="doseHelp" placeholder="Enter dosage">
        </div>
        <div class="form-group">
          <label for="ingredients">Ingredients:</label>
          <textarea name="ingredients" rows="4" class="form-control" placeholder="Enter list of ingredients"></textarea>
          <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </div>
      </form>
    </main>
  </body>
</html>
