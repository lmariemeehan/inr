<!DOCTYPE html>
<html>
<head>
  <%- include('../static/partials/head.ejs') %>
</head>
<body>
  <!-- Navigation -->
  <%- include('../static/partials/navbar.ejs') %>
  <%- include('../static/partials/messages.ejs') %>

  <% if(currentUser) { %>
  <main class="container">

    <h1 class="my-4"><span><img src="https://res.cloudinary.com/laurameehan/image/upload/v1582092381/Blood_Drop_kah1n9.svg" width="40" height="40" class="mr-2"/></span>New Inr</h1>

    <div class="card">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item">
            <a class="nav-link active" href="/inrs/new">Create New</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/inrs">Show History</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Feature to come!</a>
          </li>
        </ul>
      </div>
      <div class="card-body">
      <form action="/inrs/create" method="post">
        <h5 class="mt-2 mb-4 text-center">Your target inr range is between: <%= currentUser.lowInr %> - <%= currentUser.highInr %></h5>
        <div class="form-group mt-2">
          <label for="date">Date:</label>
          <input type="date" name="date" class="form-control">
        </div>
        <div class="form-group">
          <label for="result">INR result:</label>
          <select class="form-control" name="result" aria-describedby="resultHelp" placeholder="Enter inr result">
            <option selected>Choose</option>
            <option>1.0</option>
            <option>1.1</option>
            <option>1.2</option>
            <option>1.3</option>
            <option>1.4</option>
            <option>1.5</option>
            <option>1.6</option>
            <option>1.7</option>
            <option>1.8</option>
            <option>1.9</option>
            <option>2.0</option>
            <option>2.1</option>
            <option>2.2</option>
            <option>2.3</option>
            <option>2.4</option>
            <option>2.5</option>
            <option>2.6</option>
            <option>2.7</option>
            <option>2.8</option>
            <option>2.9</option>
            <option>3.0</option>
            <option>3.1</option>
            <option>3.2</option>
            <option>3.3</option>
            <option>3.4</option>
            <option>3.5</option>
            <option>3.6</option>
            <option>3.7</option>
            <option>3.8</option>
            <option>3.9</option>
            <option>4.0</option>
            <option>4.1</option>
            <option>4.2</option>
            <option>4.3</option>
            <option>4.4</option>
            <option>4.5</option>
            <option>4.6</option>
            <option>4.7</option>
            <option>4.8</option>
            <option>4.9</option>
            <option>5.0</option>
          </select>
        </div>
        <div class="form-group">
          <label for="notes">Notes:</label>
          <textarea name="notes" rows="4" class="form-control" placeholder="Enter notes regarding inr results"></textarea>
          <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </div>
      </form>
      </div>
    </div>

    <% } else { %>

      <div class="alert alert-warning mt-5" role="alert">
        You must sign in first to add an INR entry.
      </div>

  </main>

  <% } %>

  <%- include('../static/partials/baseScripts.ejs') %>

</body>
</html>
