<!DOCTYPE html>
<html>
<head>
  <%- include('../static/partials/head.ejs') %>
</head>
<body>
  <!-- Navigation -->
  <%- include('../static/partials/navbar.ejs') %>

  <main class="container">

    <h1 class="my-4"><span><img src="https://res.cloudinary.com/laurameehan/image/upload/v1582092381/Blood_Drop_kah1n9.svg" width="40" height="40" class="mr-2"/></span>Edit Inr Result</h1>

    <div class="card">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item">
            <a class="nav-link active" href="/inrs/:id/edit">Edit Result</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/inrs">Show History</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Feature to come!</a>
          </li>
        </ul>
      </div>
      <div class="card-body">
        <form action="/inrs/<%= inr.id %>/update" method="post">
          <div class="form-group">
            <label for="date">Date:</label>
            <input value="<%= inr.date %>" type="date" name="date" class="form-control">
          </div>
          <div class="form-group">
            <label for="result">INR result</label>
            <input value="<%= inr.result %>" type="text" class="form-control" name="result" aria-describedby="resultHelp">
          </div>
          <div class="form-group">
            <label for="notes">Notes</label>
            <textarea name="notes" rows="4" class="form-control" placeholder="Enter notes regarding inr results"><%= inr.notes %></textarea>
            <button type="submit" class="btn btn-primary mt-2">Update</button>
          </div>
        </form>
      </div>
    </div>

  </main>

  <%- include('../static/partials/baseScripts.ejs') %>

</body>
</html>
