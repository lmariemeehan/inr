<!DOCTYPE html>
<html>
<head>
  <%- include('/Users/laurameehan/Web_Projects/inr/src/views/static/partials/head.ejs') %>
</head>
<body>
  <!-- Navigation -->
  <%- include('/Users/laurameehan/Web_Projects/inr/src/views/static/partials/navbar.ejs') %>

  <main class="container">

    <h1 class="my-4">Edit Inr Result</h1>

    <form action="/inrs/<%= inr.id %>/update" method="post">
      <div class="form-group">
        <label for="date">Date:</label>
        <input value="<%= inr.date %>" type="date" name="date">
      </div>
      <div class="form-group">
        <label for="result">INR result</label>
        <input value="<%= inr.result %>" type="text" class="form-control" name="result" aria-describedby="resultHelp" placeholder="Enter Result">
      </div>
      <div class="form-group">
        <label for="notes">Notes</label>
        <textarea name="notes" rows="4" class="form-control" placeholder="Enter notes regarding inr results"><%= inr.notes %></textarea>
        <button type="submit" class="btn btn-primary mt-2">Update</button>
      </div>
    </form>

  </main>

  <%- include('/Users/laurameehan/Web_Projects/inr/src/views/static/partials/baseScripts.ejs') %>

</body>
</html>
